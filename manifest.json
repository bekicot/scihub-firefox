{
  "manifest_version": 2,
  "version": "0.0.5",
  "name": "View on Sci-Hub ",
  "description": "View paper on sci-hub. It will append the current url to sci-hub.",
  "author": "Yana Agun Siswanto",
  "homepage_url": "http://github.com/bekicot/scihub-firefox",

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/raven-32.png",
    "default_title": "View on Sci-Hub"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "48": "icons/raven-48.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{2f94dfe3-e0ac-463a-a565-7d25a00ea20a}",
      "strict_min_version": "57.0"
    }
  },

  "options_ui": {
    "page": "options.html"
  }
}